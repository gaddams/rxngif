<h1>Edit an existing Picture</h1>

<form action="http://localhost:3000/update_picture/<%= @picture_to_edit.id %>">
  <div>
    <label for="the_caption">Caption:</label>
    <input id="the_caption" type="text" name="caption" value = "<%= @picture_to_edit.caption %>">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" name="source" value = "<%= @picture_to_edit.source %>">
  </div>
  <div>
    <input type="submit" value="Edit Picture">
  </div>
</form>